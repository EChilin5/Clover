<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground"
    tools:context=".Game">

    <include
        layout="@layout/imagemax"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/text_p1"
            android:layout_width="110dp"
            android:background="@drawable/lppanel"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/yugiyo"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="LP\n4000"
            android:textColor="@color/yellow"
            android:textSize="28sp" />

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="49dp"
            android:layout_toStartOf="@+id/text_p1"
            android:background="@null"
            android:src="@drawable/submitbutton"
            android:id="@+id/submitbutton"
            android:onClick="scoreSubmit"
            android:visibility="invisible"
            />


    </RelativeLayout>
</RelativeLayout>